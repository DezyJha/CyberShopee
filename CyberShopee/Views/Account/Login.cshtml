@model CyberShopee.ViewModels.Customer.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Login to CyberShopee">
    <title>Login - CyberShopee</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary: #4F46E5;
            --primary-dark: #4338CA;
            --secondary: #EC4899;
            --text-primary: #1F2937;
            --text-secondary: #6B7280;
        }

        body {
            margin: 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #f6f8fd 0%, #f1f4f9 100%);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            overflow: hidden;
        }

        .page-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .login-section {
            flex: 0 0 40%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background-color: white;
        }

        .image-section {
            flex: 0 0 60%;
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            position: relative;
        }

        @@keyframes gradient {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        .login-container {
            width: 100%;
            max-width: 350px;
            padding: 2rem;
        }

        .logo-container {
            margin-bottom: 2rem;
            text-align: center;
        }

        .brand-logo {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }

            .brand-logo i {
                font-size: 1.5rem;
                color: white;
            }

        h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 1rem;
            position: relative;
        }

        .form-control {
            padding: 0.75rem 0.75rem 0.75rem 2.5rem;
            height: auto;
            border: 2px solid #E5E7EB;
            border-radius: 10px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
            }

        .form-group i {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        .btn-login {
            width: 100%;
            padding: 0.75rem;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            margin-top: 0.75rem;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 16px rgba(79, 70, 229, 0.2);
            }

        .footer-links {
            text-align: center;
            margin-top: 1.25rem;
            font-size: 0.9rem;
        }

            .footer-links a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 500;
                transition: color 0.2s ease;
            }

                .footer-links a:hover {
                    color: var(--primary-dark);
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <section class="login-section">
            <div class="login-container">
                <div class="logo-container">
                    <div class="brand-logo">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <h1>Welcome Back</h1>
                    <p class="subtitle">Sign in to your CyberShopee account</p>
                </div>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <i class="fas fa-envelope"></i>
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Email address", required = "required", autocomplete = "email" })
                    </div>

                    <div class="form-group">
                        <i class="fas fa-lock"></i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required", minlength = "8", autocomplete = "current-password" })
                    </div>

                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        <label class="form-check-label" for="RememberMe">Keep me signed in</label>
                    </div>

                    <button type="submit" class="btn btn-login">
                        <span id="login-text">Sign in</span>
                    </button>

                    <div class="footer-links">
                        @* <a href="@Url.Action("ForgotPassword", "Account")">Forgot password?</a> *@
                        <span class="mx-2">•</span>
                        <a href="@Url.Action("Register", "Account")">Create new account</a>
                    </div>
                }
            </div>
        </section>

        <section class="image-section">
            <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=900&q=80" *@@
                 alt="Fashion model with shopping bag">
        </section>
    </div>
</body>
</html>