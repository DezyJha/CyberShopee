@model CyberShopee.ViewModels.Customer.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Login to CyberShopee">
    <title>Login - CyberShopee</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary: #6a4cfa;
            --primary-dark: #5a39b2;
            --secondary: #f3f3f3;
            --text-primary: #fff;
            --text-secondary: #717489;
            --background-light: #e6e6ff;
            --hover-color: #6c7cc0;
        }

        body {
            margin: 0;
            min-height: 100vh;
            background: white;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            overflow: hidden;
            color: var(--text-primary);
        }

        .page-wrapper {
            display: flex;
            min-height: 100vh;
            gap: 20px;
            padding: 23px 0;
        }

        /* Login Section Styles */
        .login-section {
            flex: 0 0 40%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem;
            background-color: #fff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
        }

        .image-section {
            flex: 0 0 60%;
            background: url('https://img.freepik.com/premium-photo/neon-shopping-cart-digital-interface-glowing-lines_1061150-98312.jpg') no-repeat center center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 4rem;
            color: white;
            text-align: center;
            border-radius: 12px;
            position: relative;
        }

            .image-section::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.4);
                filter: blur(8px);
                z-index: 1;
            }

            .image-section .text-container {
                position: relative;
                z-index: 2;
                color: white;
                text-align: center;
            }

        .login-container {
            width: 100%;
            max-width: 350px;
            padding: 2rem;
        }

        .logo-container {
            margin-bottom: 2rem;
            text-align: center;
        }

        .brand-logo {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            transition: transform 0.3s ease-in-out;
        }

            .brand-logo:hover {
                transform: rotate(15deg) scale(1.1);
            }

            .brand-logo i {
                font-size: 1.75rem;
                color: black;
            }

        h1 {
            font-size: 2rem;
            font-weight: 700;
            color: #040112;
            margin-bottom: 1rem;
        }

        .subtitle {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-control {
            padding: 0.75rem 0.75rem 0.75rem 2.5rem;
            height: auto;
            border: 2px solid #E5E7EB;
            border-radius: 10px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(47, 58, 110, 0.2);
            }

        .form-group i {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            /* Updated icon color to black */
            color: #000;
            font-size: 1.1rem;
        }

        .btn-login {
            width: 100%;
            padding: 0.75rem;
            background: linear-gradient(135deg, #040112, var(--primary-dark));
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 16px rgba(47, 58, 110, 0.2);
                background: linear-gradient(135deg, var(--primary-dark), var(--primary));
            }

        .footer-links {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 1rem;
        }

            .footer-links a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 500;
                transition: color 0.3s ease, transform 0.3s ease, border 0.3s ease;
                position: relative;
            }

                .footer-links a::after {
                    content: "";
                    position: absolute;
                    bottom: -2px;
                    left: 0;
                    width: 100%;
                    height: 2px;
                    background-color: transparent;
                    transition: all 0.3s ease;
                }

                .footer-links a:hover {
                    color: var(--hover-color);
                    transform: translateY(-2px);
                }

                    .footer-links a:hover::after {
                        background-color: var(--primary);
                    }

        @@media (max-width: 768px) {
            .page-wrapper {
                flex-direction: column;
                margin-top: 30px;
            }

            .image-section {
                flex: 0 0 100%;
                height: 40vh;
            }

            .login-section {
                flex: 0 0 100%;
                margin-top: 20px;
            }

            .footer-links a {
                font-size: 0.9rem;
            }
        }</style>
</head>
<body>
    <div class="page-wrapper">
        <section class="login-section">
            <div class="login-container">
                <div class="logo-container">
                    <div class="brand-logo">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <h1>Welcome Back</h1>
                    <p class="subtitle">Log in to your CyberShopee account</p>
                </div>

                @* Html.BeginForm: Creates an HTML <form> tag. 
                   Essential for sending user input to the "Login" action in "AccountController".
                   'novalidate' is used to let ASP.NET model validation or custom JS handle the errors.
                *@
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @* AntiForgeryToken: Generates a hidden form field to prevent Cross-Site Request Forgery (CSRF) attacks.
                       Required for any POST method to ensure the request is from our own site.
                    *@
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <i class="fas fa-envelope" style="color: black;"></i>
                        @* TextBoxFor: Creates an <input type="text"> bound to the EmailAddress property. 
                           Ensures the 'name' attribute matches the ViewModel for automatic data binding.
                        *@
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Enter your email", required = "required", autocomplete = "email" })
                    </div>

                    <div class="form-group">
                        <i class="fas fa-lock" style="color: black;"></i>
                        @* PasswordFor: Creates an <input type="password">. 
                           Masks the user's input for security.
                        *@
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password", required = "required", minlength = "8", autocomplete = "current-password" })
                    </div>

                    <div class="form-check">
                        @* CheckBoxFor: Renders a checkbox and a hidden input. 
                           The hidden input ensures a 'false' value is sent to the server even if the box is unchecked.
                        *@
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        <label class="form-check-label text-black" for="RememberMe">Keep me logged in</label>
                    </div>

                    <button type="submit" class="btn btn-login">Log in</button>
                }

                <div class="footer-links">
                    @* Url.Action: Generates a clean URL string based on Routing rules. 
                       Prevents broken links if the route structure changes in the future.
                    *@
                    <p class="text-black">Don't have an account? <a href="@Url.Action("Register", "Account")">Signup now</a></p>
                </div>
            </div>
        </section>

        <section class="image-section">
            <div class="text-container">
                <h2 style="font-size: 2.5rem; font-weight: 700; color: white; text-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);">Discover the Best Deals</h2>
                <p style="font-size: 1.2rem; color: white; font-weight: 400; text-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);">Join CyberShopee and explore a world of tech at your fingertips.</p>
            </div>
        </section>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>