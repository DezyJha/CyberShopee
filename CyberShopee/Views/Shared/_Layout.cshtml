<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberShopee</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex-grow: 1;
        }

        footer {
            background-color: #1E201E;
            color: #ffffff;
            padding: 20px;
            text-align: center;
            border-top: 1px solid #ffffff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light " style="background-color: #1E201E;">
            <div class="container">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">CyberShopee</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @* <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul> *@

                    <div class="navbar-nav mx-auto text-center">
                        @if (Context.Session.GetString("FullName") != null)
                        {
                            <span class="navbar-text fw-bold text-white">
                                Welcome, @Context.Session.GetString("FullName")!
                            </span>
                        }
                    </div>

                    <ul class="navbar-nav ml-auto">
                        @if (Context.Session.GetString("FullName") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold text-white" asp-controller="ShoppingCart" asp-action="Cart">
                                    <img src="/images/imgcart.jpg" alt="Shopping Cart" style="width: 28px; height: 28px; margin-top:-4px" />
                                </a>
                            </li>

                            <li class="nav-item fw-bold text-white">
                                <a class="nav-link fw-bold text-white" asp-controller="History" asp-action="History">My History</a>
                            </li>

                            <li class="nav-item fw-bold text-white">
                                <a class="nav-link fw-bold text-white" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item fw-bold">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item fw-bold ">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p style="color: #ffffff;">
                &copy; 2025 - CyberShopee 
                @* <a href="/contact" style="text-decoration: none; color: #ffffff; margin: 0 15px;">Contact</a> |
                <a href="/about" style="text-decoration: none; color: #ffffff; margin: 0 15px;">About Us</a> *@
            </p>
            <div style="margin-top: 20px;">
                <h6 style="margin-bottom: 10px; font-weight: bold; font-size: 1.1em; color: #ffffff;">Contact Us</h6>
                <ul style="list-style-type: none; padding: 0; margin: 0; font-size: 0.9em;">
                    <li style="margin-bottom: 5px; color: #ffffff;">
                        Email: <a href="mailto:tanishqsingwal@gmail.com" style="text-decoration: none; color: #ffffff;">support@cybershopee.com</a>
                    </li>
                    <li style="margin-bottom: 5px; color: #ffffff;">Phone: +91 9889810252</li>
                </ul>
            </div>
        </div>
    </footer>

    @* Render the Scripts section if defined *@
    @RenderSection("Scripts", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
