@model IEnumerable<CyberShopee.Models.Category>
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberShopee</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            width: 100%;
            min-height: 100vh;
            background: #1a1a1a;
        }

        .hero-section {
            min-height: 100dvh;
            width: 100vw;
            margin-left: calc(50% - 50vw);
            margin-right: calc(50% - 50vw);
            background-image: url('/images/ecommerce.png');
            background-size: cover;
            background-position: center 35%;
            background-repeat: no-repeat;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
            background-size: cover;
            background-position: center;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                inset:0;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, .50);
                z-index: 1;
            }

        .content-wrapper {
            position: relative;
            z-index: 2;
            width:100%;
            padding-inline:16px;
            max-width:1280px;
            margin-inline:auto;
            text-align: center;
        }

        .site-title {
            font-family: 'Montserrat', sans-serif;
            font-weight: 900;
            font-size: 4.5rem;
            color: transparent;
            background: linear-gradient( 90deg, #ffd7ff 0%, #ffe8b3 20%, #d2ffd2 40%, #cfe4ff 60%, #ffd6e6 80%, #fff 100% );
            -webkit-background-clip: text;
            text-shadow: 0 0 6px rgba(255,255,255,0.4), 0 0 25px #ff00c8, 0 0 40px #00f5ff;
            text-transform: uppercase;
            letter-spacing: 4px;
            margin-bottom: 1rem;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            animation: fadeInDown 1s ease-out;
        }

        .site-subtitle {
            font-size: 1.2rem;
            color:white;
            margin-bottom: 2rem;
            animation: fadeInUp 1s ease-out 0.5s backwards;
        }

        .button-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            padding-inline:8px;
            gap: 1rem;
            max-width: 1200px;
            padding: 0 2rem;
            width: 100%;
            animation: fadeIn 1s ease-out 1s backwards;
        }

        .category-button {
            display: flex; 
            justify-content: center; 
            align-items: center; 
            gap: 5px;
            text-align: center;
            position: relative;
            padding: 1rem 2.2rem;
            background: #1f1f1f;
            box-shadow: 6px 6px 12px #0f0f0f, -6px -6px 12px #2f2f2f;
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 50px;
            backdrop-filter: blur(10px);
            color: #fff;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .category-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
                transform: translateX(-100%);
                transition: 0.5s;
            }

            .category-button:hover {
                transform: translateY(-5px) scale(1.02);
                background: rgba(255, 255, 255, 0.2);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
                color: #fff;
            }

                .category-button:hover::before {
                    transform: translateX(100%);
                }

        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }
    </style>
</head>
<body>
    <div class="hero-section">
        <div class="content-wrapper">
            <h1 class="site-title">Cyber Shopee</h1>
            <p class="site-subtitle">Bringing Quality and Comfort to Your Doorstep</p>
            <div class="button-container">
                @foreach (var category in Model)
                {
                    <a asp-controller="Product" asp-action="ByCategory" asp-route-id="@category.CategoryId" class="category-button">
                        <i class="fas fa-shopping-bag me-2"></i>
                        @category.CategoryName
                    </a>
                }
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>