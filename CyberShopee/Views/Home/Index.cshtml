@model IEnumerable<CyberShopee.Models.Category>
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberShopee</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary: #6a4cfa;
            --primary-dark: #5a39b2;
            --secondary: #f3f3f3;
            --text-primary: #ffffff;
            --text-secondary: #717489;
            --background-light: #e6e6ff;
            --hover-color: #6c7cc0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
            color: var(--text-primary);
            min-height: 100vh;
        }

        /* Hero Section */
        .hero-section {
            background-image: url('/images/bg.png');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: 1;
            }

        .content-wrapper {
            position: relative;
            z-index: 2;
            text-align: center;
        }

        .site-title {
            font-size: 4.5rem;
            font-weight: 700;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 4px;
            margin-bottom: 1rem;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            animation: fadeInDown 1s ease-out;
        }

        .site-subtitle {
            font-size: 1.3rem;
            color: #fff;
            margin-bottom: 3rem;
            animation: fadeInUp 1s ease-out 0.5s backwards;
        }

        .button-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            max-width: 1200px;
            padding: 0 2rem;
            animation: fadeIn 1s ease-out 1s backwards;
        }

        .category-button {
            position: relative;
            padding: 1rem 2rem;
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            color: #fff;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .category-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
                transform: translateX(-100%);
                transition: 0.5s;
            }

            .category-button:hover {
                transform: translateY(-5px) scale(1.02);
                background: rgba(255, 255, 255, 0.2);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
                color: #fff;
            }

                .category-button:hover::before {
                    transform: translateX(100%);
                }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }</style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="content-wrapper">
            <h1 class="site-title">Cyber Shopee</h1>
            <p class="site-subtitle">Your One-Stop Shop for All Things Awesome</p>
            <div class="button-container">
                @foreach (var category in Model)
                {
                    <a asp-controller="Product" asp-action="ByCategory" asp-route-id="@category.CategoryId" class="category-button">
                        <i class="fas fa-shopping-bag me-2"></i>
                        @category.CategoryName
                    </a>
                }
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>